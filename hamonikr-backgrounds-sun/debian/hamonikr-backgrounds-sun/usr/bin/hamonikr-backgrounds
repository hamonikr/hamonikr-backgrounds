#!/bin/bash

if [ $1 = "hamonikr" ] || [ $1 = "install" ]
then
	ln -Tfs /usr/share/backgrounds/hamonikr-sun/hamonikr-01.jpg /usr/share/backgrounds/linuxmint/default_background.jpg
	gsettings set org.cinnamon.desktop.background picture-uri 'file:///usr/share/backgrounds/hamonikr-sun/hamonikr-01.jpg'
	#service lightdm restart
elif [ $1 = "uninstall" ]
then
	ln -Tfs /usr/share/backgrounds/linuxmint/linuxmint.jpg /usr/share/backgrounds/linuxmint/default_background.jpg
	gsettings set org.cinnamon.desktop.background picture-uri 'file:///usr/share/backgrounds/linuxmint/default_background.jpg'
	#service lightdm restart
else
        echo " hamonikr | install | uninstall"
fi

